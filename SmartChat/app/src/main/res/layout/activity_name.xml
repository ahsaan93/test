<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_name"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.muhammadahsan.smartchat.NameActivity">
    <TextView
        android:id="@+id/tv_profile_settingUP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Setting up your profile"
        android:textStyle="bold"
        android:textSize="20sp"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:id="@+id/im_profilePic"
        android:contextClickable="true"
        android:src="@android:drawable/ic_dialog_info"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:foreground="@android:drawable/ic_popup_sync"
        android:layout_below="@+id/tv_profile_settingUP"/>
    <EditText
        android:id="@+id/ed_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:hint="Enter your name"
        android:inputType="text"
        android:maxLength="20"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/im_profilePic"/>
    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textColor="@android:color/white"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="#5890FF"
        android:textStyle="bold"
        android:layout_below="@id/ed_name"
        />
</RelativeLayout>
