<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#E6E6FA"
    android:orientation="vertical"
    tools:context="com.example.muhammadahsan.udacity.MainActivity">

    <TextView
        android:id="@+id/resultBox"
        android:text="0"
        android:gravity="right"
        android:textStyle="bold"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:maxLength="12"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/seven"
                android:text="7"
                android:textSize="35dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:onClick="press7"/>
            <Button
                android:id="@+id/eight"
                android:text="8"
                android:textSize="35dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:onClick="press8"/>
            <Button
                android:id="@+id/nine"
                android:text="9"
                android:textSize="35dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:onClick="press9"/>
            <Button
                android:id="@+id/plus"
                android:text="+"
                android:textSize="35dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:onClick="doAdd"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/four"
                android:text="4"
                android:textSize="35dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:onClick="press4"/>
            <Button
                android:id="@+id/five"
                android:text="5"
                android:textSize="35dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:onClick="press5"/>
            <Button
                android:id="@+id/six"
                android:text="6"
                android:textSize="35dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:onClick="press6"/>
            <Button
                android:id="@+id/subtract"
                android:text="-"
                android:textSize="35dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:onClick="doSub"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/one"
                android:text="1"
                android:textSize="35dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:onClick="press1"/>
            <Button
                android:id="@+id/two"
                android:text="2"
                android:textSize="35dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:onClick="press2"/>
            <Button
                android:id="@+id/three"
                android:text="3"
                android:textSize="35dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:onClick="press3"/>
            <Button
                android:id="@+id/multiply"
                android:text="x"
                android:textSize="35dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:onClick="doMultiple"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/zero"
                android:text="0"
                android:textSize="35dp"
                android:layout_width="140dp"
                android:layout_height="70dp"
                android:onClick="press0"/>
            <Button
                android:id="@+id/equal"
                android:text="="
                android:textSize="35dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:onClick="equal"/>
            <Button
                android:id="@+id/devide"
                android:text="/"
                android:textSize="35dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:onClick="doDivide"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/clear"
            android:text="Clear"
            android:textSize="35dp"
            android:layout_width="280dp"
            android:layout_height="70dp"
            android:onClick="doClear"/>
    </LinearLayout>
</LinearLayout>