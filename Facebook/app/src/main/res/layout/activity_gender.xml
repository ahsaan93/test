<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F7F8"
    tools:context="com.example.muhammadahsan.Gender">

    <TextView
        android:id="@+id/textView_Gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What's Your Gender?"
        android:textStyle="bold"
        android:textSize="20sp"
        android:padding="20dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/textView_ExtraDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Providing your gender creates the best Facebook experience for you."
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_below="@+id/textView_Gender"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup"
        android:layout_below="@+id/textView_ExtraDetail"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="50dp"
        android:background="#F6F7F8">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton_male"
            android:checked="true"
            android:text="Male"
            android:textSize="20sp"
            android:gravity="start"

            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton_Female"
            android:checked="false"
            android:text="Female"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/radioButton_male"/>
    </RadioGroup>

    <Button
    android:id="@+id/button_next"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Next"
    android:textColor="@android:color/white"
    android:background="#5890FF"
    android:onClick="goPassword"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_marginTop="50dp"
    android:layout_below="@+id/radioGroup" />

</RelativeLayout>
