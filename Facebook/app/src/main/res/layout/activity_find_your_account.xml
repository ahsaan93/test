<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.muhammadahsan.FindYourAccount">

    <EditText
        android:id="@+id/editText_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email or  Phone"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        />
    <Button
        android:id="@+id/button_findYourAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Find Your Account"
        android:textColor="@android:color/white"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="#5890FF"
        android:layout_below="@id/editText_search"
        android:onClick="doFindYourAccount"
        />
    <TextView
        android:id="@+id/textView_ExtraDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please enter you email or phone number to search for you account."
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginTop="30dp"
        android:textSize="12dp"
        android:gravity="center"
        android:layout_below="@+id/button_findYourAccount"/>
    <TextView
        android:id="@+id/textView_SignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search by your name instead"
        android:textColor="#5991FF"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
