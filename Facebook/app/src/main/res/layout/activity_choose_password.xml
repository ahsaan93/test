<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.muhammadahsan.ChoosePassword">

    <TextView
        android:id="@+id/textView_enterEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose Password"
        android:textStyle="bold"
        android:textSize="20sp"
        android:padding="20dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/textView_ExtraDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Remember this password. A password helps prevent strangers from using your account."
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:textSize="12dp"
        android:gravity="center"
        android:layout_below="@+id/textView_enterEmail"/>
    <EditText
        android:id="@+id/editText_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="Password"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:inputType="textPassword"
        android:maxLength="15"/>

    <Button
        android:id="@+id/button_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textColor="@android:color/white"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="#5890FF"
        android:layout_below="@id/editText_password"
        android:onClick="goTermsPrivacy"
        />
</RelativeLayout>
