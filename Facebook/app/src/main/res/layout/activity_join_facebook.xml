<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.muhammadahsan.JoinFacebook">

    <TextView
        android:id="@+id/textView_JoinFacebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Join Facebook"
        android:textStyle="bold"
        android:textSize="20sp"
        android:padding="20dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/textView_ExtraDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="We'll help you create a new account in a few easy steps."
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:textSize="12dp"
        android:gravity="center"
        android:layout_below="@+id/textView_JoinFacebook"/>
    <Button
        android:id="@+id/button_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textColor="@android:color/white"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="#5890FF"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="goGender"
        />
</RelativeLayout>
